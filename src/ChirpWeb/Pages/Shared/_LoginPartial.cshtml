@using Microsoft.AspNetCore.Identity
@using ChirpCore.Domain

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

<head>
    <style>
        #bar {
            position: relative;
            left: -40px;
        }
    </style>
</head>
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"
                title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <div id="bar">
            <a href="/">public timeline</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
        @*
    <li class="nav-item">
    </li>
    <li class="nav-item">
    </li>*@
    }
</ul>