@page "/"
@model ChirpWeb.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    <!-- Pagination -->
    int next = Model.currentPage + 1;
    int previous = Model.currentPage > 1 ? Model.currentPage - 1 : 1;
}

<div>

    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.UserName">@cheep.UserName</a> @* first UserId was UserName, second UserId was AuthorName *@
                        </strong>
                        @if(Model.IsLoggedIn()){
                        <button class="button" onclick="Model.FollowAuthorClick(@cheep.UserName), ReloadPage()" id="followbutton" button-type="button"
                        @(Model.IsFollowing(@cheep.UserName) ? "disabled" : "") >Follow</button>
                        <FollowUnfollowButton class="FollowUnfollowButton" onclick="Model.UnFollowAuthorClick(@cheep.UserName), ReloadPage()" id="unfollowbutton"
                        @(!Model.IsFollowing(@cheep.UserName) ? "disabled" : "")
                        >Unfollow</FollowUnfollowButton>
                        }
                        <p></p> <!-- Linebreak -->
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <button class="button" onclick="navigateToPage(@previous)" style="color: ECCFC3;" id="previousButton"
    @(Model.currentPage <= 1 ? "disabled" : "")>Previous (@previous)</button>
    <button class="button" onclick="navigateToPage(@next)" style="color: ECCFC3;" id="nextButton">Next (@next)</button>
</div>

<script>
    function navigateToPage(pageNumber) {
        const url = new URL(window.location.href);
        url.searchParams.set('pageNumber', pageNumber);
        window.location.href = url.toString(); // Navigate to the new URL
    }
</script>

<script>
    function reloadPage(){
        window.location.href = window.location.href;
    }
</script>
