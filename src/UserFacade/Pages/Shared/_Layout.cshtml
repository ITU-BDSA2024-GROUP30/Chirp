@using ChirpCore.Domain
<!DOCTYPE html>
<html lang="en">

<head>
	<title>@ViewData["Title"]</title>
	<link href="/css/style.css" rel="stylesheet" type="text/css" />
	<link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>

	<div class=page>
		<h1><img src="/images/icon1.png" alt="Icon1" />Chirp!</h1>
using ChirpCore.Domain;
#line default
iv class=navigation>
			@if (Author.Identity.IsAuthenticated)
			{
				<div>
					<a href="/@(Author.Identity.Name)">my timeline</a> |
					<a href="/">public timeline</a> |
					<a ...>logout [@(Author.Identity.Name)]</a>
				</div>
			}
			else
			{
				<div>
					<a href="/">public timeline</a> |
					<a href="/">register</a> |
					<a href="/Login">login</a>
				</div>
			}
		</div>



		<div class=body>
			@RenderBody()
		</div>
		<div class=footer>
			Chirp &mdash; An ASP.NET Application
		</div>
	</div>

</body>
@await RenderSectionAsync("Scripts", required: false)

</html>
